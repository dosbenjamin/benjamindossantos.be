---
import type { HTMLAttributes } from 'astro/types'

type Props = {
  href: string
  class?: string
}

const { href, class: className = '' }: Props = Astro.props
const isExternal = href.includes('http')

const externalAttributes: HTMLAttributes<'a'> = {
  target: '_blank',
  rel: 'noopener noreferrer',
}
---

<a
  href={href}
  class:list={['inline-block decoration-[0.075em] hover:underline focus:outline-none focus:underline', className]}
  {...(isExternal ? externalAttributes : {})}
>
  <slot />
</a>
